<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relax"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="insideOverlay"
    tools:context=".RelaxationSick" >

    <LinearLayout
        android:id="@+id/relax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="224dp"
            android:layout_height="26dp"
            android:text="Practice connecting emotions
           
            
    "
            android:textColor="@color/lightcolor" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:text="Fear, anxiety and negativity are connected with feelings. Spouses and loved ones can influence thoughts and emotions. Detach from those that bring about negative vibes and opt for positive friendships."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="31dp"
            android:text="Sleep management	"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightcolor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="Less sleep is needed as we age, but sleep problems are common with young and old. Sleep is affected by stress, mood, medicine and even alcohol."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Exercise"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightcolor" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="Different types of exercise indoors and out reduce stress for seniors. Taking tai chi classes improves mentality and helps relax the mind and body. Tai chi, a Chinese marshal art traced back to ancient India is referred to &apos;meditation in motion&apos;"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Diet"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightcolor" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:text="Boosting the immune system will add energy and reduce stress. It is never too late to alter dietary patterns. Metabolism slows down and digestion changes, but switching certain foods in the diet can make a huge difference in health, weight issues and attitude. "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Socialization Support"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightcolor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A study by Harvard researchers found social activites came close to surpass exercise when it came to survival. Friendships reduce stress and protect mental decline.Managing stress takes practice. Practice daily and before long, you&apos;ll find life can be enjoyed and treasured."
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</ScrollView>